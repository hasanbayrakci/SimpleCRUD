@model IEnumerable<Users>
@{
    ViewData["Title"] = "Home Page";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Email</th>
            <th>Tarih</th>
            <th><a class="btn btn-primary" asp-controller="Home" asp-action="Create">Create</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>@obj.Id</td>
                <td>@obj.Name</td>
                <td>@obj.Surname</td>
                <td>@obj.Email</td>
                <td>@obj.Tarih</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Home" asp-action="Detail" asp-route-id="@obj.Id">Detail</a>
                    <a class="btn btn-warning" asp-controller="Home" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                    <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
